{
	"$schema": "http://turbo.build/schema.json",
	"remoteCache": {
		"signature": true
	},
	"globalEnv": ["CI_OS", "NODE_VERSION", "VITEST"],
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["build"]
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"check:lint": {
			"dependsOn": ["build"]
		},
		"check:type": {
			"dependsOn": ["build"]
		},
		"type:tests": {
			"dependsOn": ["build"]
		},
		"test:ci": {
			"dependsOn": ["build"]
		},
		"test:e2e": {},
		"//#check:format": {
			"cache": true
		}
	}
}
